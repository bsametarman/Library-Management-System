@model LibraryManagementSystem.Entities.Concrete.Employee

@{
}

<div class="container">
	<div class="py-5 text-center">
		@*<img class="d-block mx-auto mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">*@
	<h2>Add Employee</h2>
	</div>

	<div class="row">


		<div class="col-md-12 order-md-1">
			<h4 class="mb-3">Employee Informations</h4>
			<form method="post" asp-action="Add">
				<div class="row">
					<div class="col-md-6 mb-3">
						<label asp-for="EmployeeName">Name</label>
						<input asp-for="EmployeeName" class="form-control" value="" required>
						<div class="invalid-feedback">
							Valid first name is required.
						</div>
					</div>
					<div class="col-md-6 mb-3">
						<label asp-for="EmployeeSurname">Surname</label>
						<input asp-for="EmployeeSurname" class="form-control" value="" required>
						<div class="invalid-feedback">
							Valid last name is required.
						</div>
					</div>
				</div>

				<div class="mb-3">
					<label asp-for="IdentityNumber">Identity Number</label>
					<div class="input-group">
						<input asp-for="IdentityNumber" class="form-control" required>
						<div class="invalid-feedback" style="width: 100%;">
							Your username is required.
						</div>
					</div>
				</div>

				<div class="mb-3">
					<label asp-for="PhoneNumber">Phone Number<span class="text-muted"></span></label>
					<input asp-for="PhoneNumber" class="form-control">
					<div class="invalid-feedback">
						Please enter a valid email address for shipping updates.
					</div>
				</div>

				<div class="mb-3">
					<label asp-for="BirthYear">Birth Year<span class="text-muted"></span></label>
					<input asp-for="BirthYear" class="form-control">
				</div>

				<div class="mb-3">
					<label asp-for="Email">Email<span class="text-muted"></span></label>
					<input asp-for="Email" class="form-control">
				</div>


				<div class="mb-3">
					<label asp-for="Address">Address<span class="text-muted"></span></label>
					<input asp-for="Address" class="form-control">
				</div>

				<div class="d-flex justify-content-center">
				<button class="btn btn-outline-success btn-lg btn-block" style="width: 250px; height: 75px" type="submit">Add</button>
				</div>
			</form>
		</div>
	</div>
</div>
