@model UserSignInViewModel

@{
}

  <body>
      <form method="post" asp-action="SignIn" style="margin: 5% 30% 5% 30%">
      <h1 class="h3 mb-3 font-weight-normal text-center">Sign in</h1>
      <label asp-for="Email" class="sr-only" style="margin: 3% 0 3% 0">Email address</label>
      <input asp-for="Email" id="inputEmail" style="margin-bottom: 5%" class="form-control" placeholder="Email address" required autofocus>
      <label asp-for="Password" style="margin-bottom: 3%" class="sr-only">Password</label>
      <input asp-for="Password" type="password" style="margin-bottom: 5%" id="inputPassword" class="form-control" placeholder="Password" required>
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me" style="margin-bottom: 5%"> Remember me
        </label>
      </div>
      <div class="text-center">
        <button class="btn btn-lg btn-primary btn-block " style="margin-bottom: 5%" type="submit">Sign in</button>
      </div>
      </form>
  </body>

