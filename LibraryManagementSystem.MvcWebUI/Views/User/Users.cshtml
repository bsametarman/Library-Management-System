@model List<LibraryManagementSystem.Entities.Concrete.AppUser>

@{
}


<div class="text-center">
	<div class="font-weight-bold h3" style="margin: 25px 0 25px 0">Users</div>		
</div>

@for (int i = 0; i < Model.Count; i++)
{

	@if (i % 4 == 0)
	{
		if (i > 0)
		{
			@:</div>
		}
		@:<div class="row">
	}


		<div class="col-md-6">
			<div class="card mb-4 box-shadow">
				<div class="card-header">
					<h4 class="my-0 font-weight-normal">@Model[i].Name @Model[i].Surname</h4>
				</div>
				<div class="card-body">
					<div class="text-center">
						<small class="text-muted">Email: @Model[i].Email</small>
						<ul class="list-unstyled mt-3 mb-4">
							<li>Birth year: @Model[i].BirthYear</li>
							<li>Gender: @Model[i].Gender</li>
							<li>Burrowed book number: @Model[i].BorrowedBookNumber</li>
							<li>Debt: @Model[i].Debt</li>
							<li>@Model[i].Id</li>
						</ul>
						<button type="button" class="btn btn-lg btn-block btn-outline-primary">Details</button>
					</div>
				</div>
			</div>
		</div>
}

@if (Model.Count > 0)
{
	@:</div>
}