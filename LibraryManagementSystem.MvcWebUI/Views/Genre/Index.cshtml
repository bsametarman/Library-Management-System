@model List<LibraryManagementSystem.Entities.Concrete.Genre>

@{
}

<div class="text-center">
	<div class="font-weight-bold h3" style="margin: 25px 0 25px 0">Genres</div>		
</div>

@for (int i = 0; i < Model.Count; i++)
{

	@if (i % 4 == 0)
	{
		if (i > 0)
		{
			@:</div>
		}
		@:<div class="row">
	}
	<div class="col-md-6">
		<div class="card mb-4 box-shadow">
			<div class="card-body">
				<div class="text-center">
					<small class="text-muted">Genre: @Model[i].GenreName</small>
					<ul class="list-unstyled mt-3 mb-4">
						<li>@Model[i].GenreId</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
}

@if (Model.Count > 0)
{
	@:</div>
}