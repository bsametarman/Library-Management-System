@model LibraryManagementSystem.Entities.Concrete.Book
@*@model List<LibraryManagementSystem.Entities.Concrete.Book>*@
@{
}

<div class="container">
      <div class="py-5 text-center">
        @*<img class="d-block mx-auto mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">*@
        <h2>Add new book to the database</h2>
      </div>

<div class="row">

		
	<div class="col-md-12 order-md-1">
		<h4 class="mb-3">Book Informations</h4>
		<form method="post" asp-action="Add">
			<div class="row">
				<div class="col-md-6 mb-3">
					<label asp-for="BookName">Book Name</label>
					<input asp-for="BookName" class="form-control" value="" required>
					<div class="invalid-feedback">
						Valid first name is required.
					</div>
				</div>
				<div class="col-md-6 mb-3">
					<label asp-for="AuthorId">Author Id</label>
					<input asp-for="AuthorId" class="form-control" value="" required>
					<div class="invalid-feedback">
						Valid last name is required.
					</div>
				</div>
			</div>

			<div class="mb-3">
				<label asp-for="ISBN">Isbn</label>
				<div class="input-group">
					<input asp-for="ISBN" class="form-control" required>
					<div class="invalid-feedback" style="width: 100%;">
						Your username is required.
					</div>
				</div>
			</div>

			<div class="mb-3">
				<label asp-for="ShelfNumber">Shelf Number <span class="text-muted"></span></label>
				<input asp-for="ShelfNumber" class="form-control">
				<div class="invalid-feedback">
					Please enter a valid email address for shipping updates.
				</div>
			</div>

			<div class="mb-3">
				<div class="custom-control custom-checkbox">
					<input asp-for="AvailableState" class="custom-control-input">
					<label asp-for="AvailableState">Available State</label>
				</div>
				
			</div>

			<div class="mb-3">
				<label asp-for="Publisher">Publisher <span class="text-muted"></span></label>
				<input asp-for="Publisher" class="form-control">
			</div>
			
			<div class="mb-3">
				<label asp-for="PublishedYear">Published Year<span class="text-muted"></span></label>
				<input asp-for="PublishedYear" class="form-control">
			</div>
			
			<div class="mb-3">
				<label asp-for="ShortSummary">Short Summary<span class="text-muted"></span></label>
				<input asp-for="ShortSummary" class="form-control">
			</div>

			@*<div class="row">
				<div class="col-md-5 mb-3">
					<label for="country">Country</label>
					<select class="custom-select d-block w-100" id="country" required>
						<option value="">Choose...</option>
						<option>United States</option>
					</select>
					<div class="invalid-feedback">
						Please select a valid country.
					</div>
				</div>
				<div class="col-md-4 mb-3">
					<label for="state">State</label>
					<select class="custom-select d-block w-100" id="state" required>
						<option value="">Choose...</option>
						<option>California</option>
					</select>
					<div class="invalid-feedback">
						Please provide a valid state.
					</div>
				</div>
			</div>*@
			


			@*<div class="custom-control custom-checkbox">
				<input type="checkbox" class="custom-control-input" id="same-address">
				<label class="custom-control-label" for="same-address">Shipping address is the same as my billing address</label>
			</div>
			<div class="custom-control custom-checkbox">
				<input type="checkbox" class="custom-control-input" id="save-info">
				<label class="custom-control-label" for="save-info">Save this information for next time</label>
			</div>*@
			@*<hr class="mb-4">*@

			<div class="d-flex justify-content-center">
			<button class="btn btn-success btn-lg btn-block" style="width: 250px; height: 75px" type="submit">Save</button>
			</div>
		</form>
	</div>
</div>
